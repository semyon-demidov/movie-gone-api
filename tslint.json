{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-config-airbnb"
    ],
    "jsRules": {},
    "rules": {
        "import-name": [
            false
        ],
        "variable-name": [
            true,
            "check-format",
            "allow-leading-underscore"
        ],
        "semicolon": [
            true,
            "never"
        ],
        "typedef": [
            true,
            "call-signature",
            "arrow-call-signature"
        ],
        "no-console": {
            "options": [
                "log"
            ],
            "severity": "error"
        },
        "align": [
            true,
            "parameters",
            "statements"
        ]
    },
    "rulesDirectory": []
}